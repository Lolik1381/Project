@model Project.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style-1.css">
    <title>Tripadvisor: прочтите отзывы, сравните цены и забронируйте</title>
</head>
<body>
    <div class="header">
        <div class="header-login">
            <div class="wrapper wrapper-enter">
                <div class="conteiner">
                    <img src="data:image/jpeg;base64, @(Convert.ToBase64String(@ViewBag.defaultSityImage.image))" alt="" class="logo">
                </div>

                <div class="places-place" style="height: 500px">
                    <div class="place-image">
                        <img src="data:image/jpeg;base64, @(Convert.ToBase64String(@ViewBag.defaultRegisterImage.image))" alt="">
                    </div>

                    <form method="post" asp-controller="Account" asp-action="Register">
                        <h1 style="position: relative; top: 30px; left: 20px; font-size: 40px;">Добро пожаловать!</h1>
                        <div class="form-publish">
                            <div asp-validation-summary="ModelOnly"></div>
                            <h4>Ваш email</h4>
                            <div>
                                <input asp-for="Email" placeholder="Здесь обычно пишут email" require />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <h4>Ваш пароль</h4>
                            <div>
                                <input asp-for="Password" placeholder="А здесь пароль" required />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <h4>Введите повторно пароль</h4>
                            <div>
                                <input asp-for="PasswordConfirm"  placeholder="И тут пароль" required />
                                <span asp-validation-for="PasswordConfirm"></span>
                            </div>

                            <input type="submit" value="Регистрация" class="send-publish">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="content">
        <div class="wrapper">
        </div>
    </div>
    <div class="footer"></div>
</body>
</html>