@model Project.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="header">
        <div class="header-login">
            <div class="wrapper wrapper-enter">
                <div class="conteiner" style="height: 30px;">
                    <a href="/" style="display: block; float: left; margin-top: 0; margin-left: 0; margin-top: -5px;">
                        <img src="data:image/jpeg;base64, @(Convert.ToBase64String(@ViewBag.defaultSityImage.image))" alt="" class="logo">
                    </a>
                </div>

                <div class="places-place" style="height: 200px; width: 660px;">
                    <div class="place-image">
                        <img src="data:image/jpeg;base64, @(Convert.ToBase64String(@ViewBag.defaultLoginImage.image))" alt="">
                    </div>

                    <form method="post">
                        <div class="form-publish">
                            <a href=@Url.Action("AddDirection", "Admin") class="send-publish-b send-publish-a" style="width: 250px;">Добавить направление</a>
                            <a href=@Url.Action("AddLandmark", "Admin") class="send-publish-b send-publish-a" style="width: 250px;">Добавить достопримечательность</a>
                            <a href=@Url.Action("AddHotel", "Admin") class="send-publish-b send-publish-a" style="width: 250px;">Добавить отель</a>
                            <a href=@Url.Action("AddRestaurant", "Admin") class="send-publish-b send-publish-a" style="width: 250px;">Добавить ресторан</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="wrapper">

        </div>
    </div>
    <div class="footer"></div>
</body>
</html>