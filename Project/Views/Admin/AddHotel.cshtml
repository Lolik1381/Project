@model Project.ViewModels.AddHotel

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="header">
        <div class="header-login">
            <div class="wrapper wrapper-enter">
                <div class="conteiner" style="height: 30px;">
                    <a href="/" style="display: block; float: left; margin-top: 0; margin-left: 0; margin-top: -5px;">
                        <img src="data:image/jpeg;base64, @(Convert.ToBase64String(@ViewBag.defaultSityImage.image))" alt="" class="logo">
                    </a>
                </div>

                <div class="places-place" style="width: 550px; height: 1550px;">
                    <form method="post" asp-controller="Admin" asp-action="AddHotel" enctype="multipart/form-data">
                        <h1 style="position: relative; top: 30px; left: 20px; font-size: 40px;">Отель</h1>
                        <div class="form-publish">
                            <div asp-validation-summary="ModelOnly"></div>
                            <h4>Название достопримечательности</h4>
                            <div>
                                <input asp-for="Name" required />
                                <span asp-validation-for="Name"></span>
                            </div>

                            <h4>Месторасположение</h4>
                            <div>
                                <input asp-for="Location" />
                                <span asp-validation-for="Location"></span>
                            </div>
                            <h4>Номер телефона для связи</h4>
                            <div>
                                <input asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                            <h4>Описание</h4>
                            <div>
                                <input asp-for="Description" />
                                <span asp-validation-for="Description"></span>
                            </div>
                            <h4>Ссылка на сайт отеля</h4>
                            <div>
                                <input asp-for="HrefSite" />
                                <span asp-validation-for="HrefSite"></span>
                            </div>
                            <h4>Колличество звезд отеля</h4>
                            <div>
                                <input asp-for="CountStars" required />
                                <span asp-validation-for="CountStars"></span>
                            </div>
                            <h4>Стиль отеля</h4>
                            <div>
                                <input asp-for="StyleHotel" />
                                <span asp-validation-for="StyleHotel"></span>
                            </div>
                            <h4>Языки, на которых разговаривают в отеле</h4>
                            <div>
                                <input asp-for="Languages" />
                                <span asp-validation-for="Languages"></span>
                            </div>

                            <h4>Главное фото</h4>
                            <div>
                                <input asp-for="MainPhoto" required />
                                <span asp-validation-for="MainPhoto"></span>
                            </div>
                            <h4>Фото</h4>
                            <div>
                                <input asp-for="Photos" multiple required />
                                <span asp-validation-for="Photos"></span>
                            </div>

                            <h4>Оснащенность номера</h4>
                            <div>
                                @Html.DropDownListFor(model => model.roomEquipment, ViewBag.selectRoomEquipments as SelectList, new { @class = "select-style-class", @multiple = "multiple", @required = "required" })
                            </div>
                            <div class="clearfix"></div>
                            <h4>Услуги и удобства в отеле</h4>
                            <div>
                                @Html.DropDownListFor(model => model.services, ViewBag.selectServices as SelectList, new { @class = "select-style-class", @multiple = "multiple", @required = "required" })
                            </div>
                            <div class="clearfix"></div>
                            <h4>Типы номеров</h4>
                            <div>
                                @Html.DropDownListFor(model => model.roomType, ViewBag.selectRoomTypes as SelectList, new { @class = "select-style-class", @multiple = "multiple", @required = "required" })
                            </div>

                            <h4>Направления</h4>
                            <div>
                                @Html.DropDownListFor(model => model.DirectionId, ViewBag.selectDirection as SelectList, new { @required = "required" })
                            </div>

                            <input type="submit" value="Подтвердить" class="send-publish">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="wrapper">

        </div>
    </div>
    <div class="footer"></div>
</body>
</html>